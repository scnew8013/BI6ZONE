        }

        .footer-link {
            color: #d4af37;
            text-decoration: none;
            position: relative;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .footer-link::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 1px;
            bottom: -2px;
            left: 0;
            background-color: #d4af37;
            transform: scaleX(0);
            transform-origin: bottom right;
            transition: transform 0.3s ease;
        }

        .footer-link:hover::after {
            transform: scaleX(1);
            transform-origin: bottom left;
        }

        .footer-link:hover {
            text-shadow: 0 0 10px #d4af37;
        }

        /* Animations */
        @keyframes glow-pulse {
            0% { text-shadow: 0 0 20px #d4af37, 0 0 40px #d4af37; }
            100% { text-shadow: 0 0 30px #d4af37, 0 0 60px #d4af37, 0 0 90px #d4af37; }
        }

        @keyframes typewriter {
