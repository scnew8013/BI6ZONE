            padding: 0 20px;
            position: relative;
            z-index: 10;
        }

        /* Background Effects */
        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .glow-ring {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
        }

        .glow-1 {
            top: 25%;
            left: 25%;
            width: 400px;
            height: 400px;
            background: rgba(212, 175, 55, 0.1);
        }

        .glow-2 {
            bottom: 25%;
            right: 25%;
            width: 400px;
            height: 400px;
            background: rgba(212, 175, 55, 0.08);
        }

        .glow-3 {
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 800px;
            height: 800px;
            background: rgba(212, 175, 55, 0.05);
            filter: blur(120px);
        }

        /* Header */
        .header {
            text-align: center;
            padding: 2rem 0;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: rgba(212, 175, 55, 0.1);
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 0.75rem;
            color: #d4af37;
            text-decoration: none;
            transition: all 0.3s ease;
            margin-bottom: 2rem;
        }

        .back-btn:hover {
            background: rgba(212, 175, 55, 0.2);
            border-color: #d4af37;
        }

        .title {
            font-size: 4rem;
            font-weight: 900;
            color: #d4af37;
            text-shadow: 0 0 30px #d4af37, 0 0 60px #d4af37;
            letter-spacing: 0.2em;
            margin-bottom: 2rem;
            animation: glow-pulse 2s ease-in-out infinite alternate;
        }

        .typewriter {
            border-right: 2px solid #d4af37;
            animation: typewriter 4s steps(5) 1s infinite, blink 1s step-end infinite;
            white-space: nowrap;
            overflow: hidden;
            width: 5ch;
            margin: 0 auto;
        }

        /* Controls */
        .controls {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 3rem;
            flex-wrap: wrap;
        }

        .search-container {
            position: relative;
        }

        .search-input {
