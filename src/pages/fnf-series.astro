            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 0.75rem;
            color: #d4af37;
            font-size: 1rem;
            font-family: 'Orbitron', monospace;
        }

        .search-input:focus {
            outline: none;
            border-color: #d4af37;
            box-shadow: 0 0 25px rgba(212, 175, 55, 0.4);
        }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(212, 175, 55, 0.6);
        }

        .select-container {
            position: relative;
        }

        .select {
            height: 3.5rem;
            padding: 0 2.5rem 0 1rem;
            background: rgba(212, 175, 55, 0.1);
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 0.75rem;
            color: #d4af37;
            font-size: 1rem;
            font-family: 'Orbitron', monospace;
            cursor: pointer;
            appearance: none;
        }

        .select:focus {
            outline: none;
            border-color: #d4af37;
            box-shadow: 0 0 25px rgba(212, 175, 55, 0.4);
        }

        /* Games Grid */
        .games-grid {
            display: grid;
            gap: 1.5rem;
            margin-bottom: 4rem;
        }

        .grid-mobile { grid-template-columns: 1fr; }
        .grid-tablet { grid-template-columns: repeat(2, 1fr); }
        .grid-desktop { grid-template-columns: repeat(3, 1fr); }

        /* Game Card */
        .rectangle-container {
            /* Container styles if needed */
        }

        .rectangle {
            position: relative;
            background: rgba(212, 175, 55, 0.05);
            border: 1px solid rgba(212, 175, 55, 0.3);
            border-radius: 0.75rem;
            overflow: hidden;
            transition: all 0.5s ease;
            cursor: pointer;
            height: 250px;
            display: flex;
            flex-direction: column;
        }

        .rectangle:hover {
            border-color: #d4af37;
            transform: scale(1.02);
            box-shadow: 0 0 30px rgba(212, 175, 55, 0.4);
        }

        .rectangle img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .rectangle:hover img {
            transform: scale(1.1);
        }

        .game-name {
